{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "#*": ["src/*"]
    }
  },
  "include": ["src"],
  "files": ["./src/types/global.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
